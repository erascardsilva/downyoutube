{
  "name": "downyoutube",
  "version": "1.0.0",
  "description": "YouTube Downloader",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder", 
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win", 
    "build:mac": "electron-builder --mac" 
  },
  "build": {
    "appId": "com.example.downyoutube",
    "productName": "DownYouTube",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "scripts/**/*",
      "icon.png"
    ],
    "linux": {
      "target": ["deb", "AppImage"], 
      "category": "Utility",
      "icon": "./icon.png" 
    },
    "win": {
      "target": ["nsis", "portable"], 
      "icon": "./icon.ico" 
    },
    "mac": {
      "target": ["dmg", "zip"], 
      "icon": "icon.icns" 
    },
    "extraResources": [
      {
        "from": "scripts/install-yt-dlp.sh",
        "to": "scripts/install-yt-dlp.sh",
        "filter": ["**/*"]
      }
    ]
  },
  "author": "Erasmo Cardoso <erascardsilva@gmail.com>",
  "homepage": "https://electrocode.com.br",
  "dependencies": {
   
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}